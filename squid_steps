#this code needs to be run from the folder where the bam file is located.

#sort the bam file with help of samtools using with 8 threads and 4gb per thread
samtools sort -@ 8 -m 4G bam_file.bam -o newfile.bam

#the sorted bam file and the chimeric bam file along with the squid qxecution file have to be placed into the same folder
#using squid tool 
./squid -b sorted_bam_file.bam -c chimeric_bam_file.bam -o output_file_of_squid

#download the AnnotateSQUIDOutput.py file from squid repository
#download the gtf file from https://www.gencodegenes.org/human/

#run the code to obtain annotated fusion gene list
conda activate environment_with_squid
python AnnotateSQUIDOutput.py gencode.v38.annotation.gtf output_file_of_squid fusion_gene_list